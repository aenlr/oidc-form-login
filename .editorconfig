root = true

[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.{json,sh,tpl,yaml}]
indent_size = 2

[*.{sln,csproj,cmd,bat,ps1}]
end_of_line = crlf

[Makefile]
indent_style = tab
